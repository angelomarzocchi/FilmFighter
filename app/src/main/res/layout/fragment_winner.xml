<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="viewModel"
            type="com.example.filmfighter.model.ViewModel" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/first_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star"
                app:tint="#FFd4AF37" />

            <TextView
                android:id="@+id/first_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/first_star"
                app:layout_constraintTop_toTopOf="@id/first_star"
                app:layout_constraintBottom_toBottomOf="@id/first_star"
                tools:text="Angelo"
                />

            <TextView
                android:id="@+id/first_movie_text_view"
                app:layout_constraintTop_toBottomOf="@id/first_star"
                app:layout_constraintStart_toStartOf="@id/first_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/movie"/>

            <TextView
                android:id="@+id/first_movie_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/first_movie_text_view"
                app:layout_constraintTop_toTopOf="@id/first_movie_text_view"
                app:layout_constraintBottom_toBottomOf="@id/first_movie_text_view"
                tools:text="Avatar: The way of water"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/first_point_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/first_movie_text_view"
                app:layout_constraintStart_toStartOf="@id/first_star"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/points"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/first_point_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/first_point_title_text_view"
                app:layout_constraintTop_toTopOf="@id/first_point_title_text_view"
                app:layout_constraintBottom_toBottomOf="@id/first_point_title_text_view"
                tools:text = "20"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/second_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_card_view"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/second_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star"
                app:tint="#FFd8d8d8" />

            <TextView
                android:id="@+id/second_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/second_star"
                app:layout_constraintTop_toTopOf="@id/second_star"
                app:layout_constraintBottom_toBottomOf="@id/second_star"
                tools:text="Michele"
                />

            <TextView
                android:id="@+id/second_movie_text_view"
                app:layout_constraintTop_toBottomOf="@id/second_star"
                app:layout_constraintStart_toStartOf="@id/second_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/movie"/>

            <TextView
                android:id="@+id/second_movie_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/second_movie_text_view"
                app:layout_constraintTop_toTopOf="@id/second_movie_text_view"
                app:layout_constraintBottom_toBottomOf="@id/second_movie_text_view"
                tools:text="65"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/second_point_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/second_movie_text_view"
                app:layout_constraintStart_toStartOf="@id/second_star"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/points"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/second_point_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/second_point_title_text_view"
                app:layout_constraintTop_toTopOf="@id/second_point_title_text_view"
                app:layout_constraintBottom_toBottomOf="@id/second_point_title_text_view"
                tools:text = "10"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/third_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_card_view"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/third_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star"
                app:tint="#FFA05822" />

            <TextView
                android:id="@+id/third_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/third_star"
                app:layout_constraintTop_toTopOf="@id/third_star"
                app:layout_constraintBottom_toBottomOf="@id/third_star"
                tools:text="Raffaele"
                />

            <TextView
                android:id="@+id/third_movie_text_view"
                app:layout_constraintTop_toBottomOf="@id/third_star"
                app:layout_constraintStart_toStartOf="@id/third_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/movie"/>

            <TextView
                android:id="@+id/third_movie_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/third_movie_text_view"
                app:layout_constraintTop_toTopOf="@id/third_movie_text_view"
                app:layout_constraintBottom_toBottomOf="@id/third_movie_text_view"
                tools:text="Super Mario Bros"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/third_point_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/third_movie_text_view"
                app:layout_constraintStart_toStartOf="@id/third_star"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/points"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/third_point_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/third_point_title_text_view"
                app:layout_constraintTop_toTopOf="@id/third_point_title_text_view"
                app:layout_constraintBottom_toBottomOf="@id/third_point_title_text_view"
                tools:text = "0"
                android:layout_marginStart="10dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="?attr/colorPrimary"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>


</layout>